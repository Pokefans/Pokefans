@model Pokefans.Areas.fanart.Models.FanartIndexViewModel
@using System.Configuration
@{
    SiteTitle = "Foren-Übersicht";
    SiteHeader = "Pokefans-Forum";
    SiteDescription = "";
    ActiveMenuKey = "forum";
}

<div id="boardindex">
    @foreach(Board b in Model) {
    <div class="category">
        <div class="category-header"><h2 class="h4">@b.Name</h2></div>
        <div class="category-body">
            @foreach(Board cb in b.Children) {
            <div class="forum clearfix">
                <div class="col-md-9"><h3 class="h4 forum-title"><i class="fa fa-comments fa-lg unread"></i> <a href="@Url.Map(cb.Url)">@cb.Name</a></h3>
                <div class="forum-info"><i class="fa fa-history"></i> <a href="#">@cb.LastPost.Subject</a> <i class="fa fa-user"></i> @cb.LastPost.Author.UserName <i class="fa fa-clock-o"></i> @cb.LastPost.LastEditTime.ToString("d.M.yyyy H:m")</div>
                    @if(cb.Children.Count > 0) {
                    <ul class="list-unstyled list-inline"><li><strong>Unterforen:</strong></li>
                        @foreach(Board ccb in cb.Children) {
                        <li><i class="fa fa-comments fa-comments read"></i> <a href="@Url.Map(ccb.Url)">@ccb.Name</a></li>
                        }
                    </ul>
                    }
                </div>
                <div class="col-md-2 hidden-sm hidden-xs foruminfo">
                    <div><strong>@cb.PostCount</strong><br /><small>Beiträge</small></div>
                    <div><strong>@cb.ThreadCount</strong><br /><small>Themen</small></div>
                </div>
            </div>
            }
        </div>
    </div>
    }
</div>