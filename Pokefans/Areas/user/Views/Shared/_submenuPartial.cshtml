@model Pokefans.Areas.user.Models.UserSubmenuViewModel
<div class="navbar navbar-light bg-pf-grey navbar-expand">
    <ul class="navbar-nav mr-auto mr-md-0">
        <li class="nav-item @(Model.ActiveMenuKey == "home" ? "active" : "")"><a class="nav-link" href="@Url.Map("")" id="home">Für dich</a></li>
        <li class="nav-item @(Model.ActiveMenuKey == "profile" ? "active" : "")"><a class="nav-link" href="@Url.Map("profil/")" id="home">Dein Profil</a></li>
    </ul>
    <form class="form-inline navbar-left d-none d-md-block mr-auto" role="search" method="get" action="@Url.Map("suche")">
        <div class="input-group">
            <input type="text" class="form-control" id="term" name="term" placeholder="Suche Benutzer" value="@Model.SearchTerm" />
            <span class="input-group-append">
                <button class="btn btn-outline-dark" type="submit"><i class="fa fa-search"></i></button>
            </span>
        </div>
    </form>
    <ul class="navbar-nav">
        <li class="nav-item @(Model.ActiveMenuKey == "privmsgs" ? "active" : "")"><a class="nav-link" href="@Url.Map("nachrichten")"><i class="fa fa-envelope fa-lg"></i> <span class="d-none d-lg-inline">Nachrichten</span> <span class="badge badge-pill badge-secondary">@UnreadMessages.ToString()</span></a></li>
        <li class="nav-item @(Model.ActiveMenuKey == "notifications" ? "active" : "")"><a class="nav-link" href="#"><i class="fa fa-envelope fa-lg"></i> <span class="d-none d-lg-inline">Benachrichtigungen</span> <span class="badge badge-pill badge-secondary">@UnreadNotifications.ToString()</span></a></li>
        <li class="nav-item dropdown @(Model.ActiveMenuKey == "settings" ? "active" : "")">
            <a href="#" class="nav-link dropdown-toggle" id="settings-dropdown" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" title="Profileinstellungen">
                <i class="fa fa-gears fa-lg"></i> <span class="d-none d-lg-inline"> Einstellungen</span>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="settings-dropdown">
                <a class="dropdown-item" href="#">Profildetails bearbeiten</a>
                <a class="dropdown-item" href="#">Benachrichtigungen verwalten</a>
				<a class="dropdown-item" href="#">Feed verwalten</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="@Url.Action("ChangePassword", "Manage")">Passwort ändern</a>
                <a class="dropdown-item" href="@Url.Action("ManageLogins", "Manage")">Verknüpfte Logins verwalten</a>
            </div>
        </li>
    </ul>
</div>