@model Pokefans.Areas.user.Models.UserSubmenuViewModel
<div class="navbar navbar-default navbar-nocollapse">
    <div class="clearfix">
        <ul class="nav navbar-nav">
            <li class="@(Model.ActiveMenuKey == "home" ? "active" : "")"><a href="@Url.Action("Index", "FanartHome", null)" id="home">Dein Profil</a></li>
        </ul>
        <form class="navbar-form navbar-left hidden-xs" role="search" method="get" action="@Url.Map("suche")">
            <div class="input-group">
                <input type="text" class="form-control" id="term" name="term" placeholder="Suche Benutzer" value="@Model.SearchTerm" />
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </form>
        <ul class="nav navbar-nav navbar-right">
            <li class="@(Model.ActiveMenuKey == "privmsgs" ? "active" : "")"><a href="#"><i class="fa fa-envelope fa-lg"></i> Nachrichten <span class="badge">@UnreadMessages.ToString()</span></a></li>
            <li class="@(Model.ActiveMenuKey == "notifications" ? "active" : "")"><a href="#"><i class="fa fa-envelope fa-lg"></i> Benachrichtigungen <span class="badge">@UnreadNotifications.ToString()</span></a></li>
            <li class="@(Model.ActiveMenuKey == "settings" ? "active" : "")">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" title="Profileinstellungen"><i class="fa fa-gears fa-lg"></i> Einstellungen <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="#">Profildetails bearbeiten</a></li>
                    <li><a href="#">Benachrichtigungen verwalten</a></li>
					<li><a href="#">Feed verwalten</a></li>
                    <li role="separator" class="divider"></li>
                    <li><a href="@Url.Action("ChangePassword")">Passwort ändern</a></li>
                    <li><a href="@Url.Action("ManageLogins")">Verknüpfte Logins verwalten</a></li>
                </ul>
            </li>
        </ul>
    </div>
</div>