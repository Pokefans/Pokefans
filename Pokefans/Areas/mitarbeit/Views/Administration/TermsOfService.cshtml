@using Pokefans.Data.UserData
@using Pokefans.Data;
@using System.Linq;
@model List<DsgvoComplianceInfo>
@{
    SiteTitle = "Pokefans | Mitarbeitsbereich - Nutzungsbedingungen verwalten";
    SiteHeader = "Nutzungsbedingungen";
    SiteDescription = "Alle bisherigen Nutzungsbedingungen";
    Layout = "~/Areas/mitarbeit/Views/_Layout.cshtml";
}

<div class="box box-primary">
   <div class="box-body">
       <div class="table-responsive">
           <table class="table table-striped table-hover vertical-center">
               <thead>
                   <tr>
                       <th>#</th>
                       <th>Gültig ab</th>
                       <th></th>
                   </tr>
               </thead>
               <tbody id="fanart-categories">
                   @foreach (var tos in Model)
                   {
                        <tr>
                            <td>@tos.Id.ToString()</td>
                            <td>@tos.EffectiveTime.ToString("dd.MM.yyyy")</td>
                            <td><a href="@Url.Action("ViewTos", "Administration", new { area = "mitarbeit", id = tos.Id})">Details</a></td>
                        </tr>
                   }
               </tbody>
           </table>

           <a class="btn btn-primary" href="@Url.Action("NewTos")">Neue Nutzungsbedingungen gültig stellen</a>
       </div>
   </div>
</div>