@{
    SiteTitle = "Fanart zum Bearbeiten auswählen";
    SiteHeader = "Fanart zum Bearbeiten auswählen";
    SiteDescription = "";
    Layout = "~/Areas/mitarbeit/Views/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-8 col-md-12">
        @if(ViewBag.Error)
        {
            <div class="alert alert-danger">Das gesuchte Fanart wurde nicht gefunden.</div>
        }
        <div class="box">
            <div class="box-body">
                <form role="form" method="post">
                    <div class="input-group">
                        <input type="number" min="0" placeholder="ID-Nummer" />
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">Auswählen</button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

