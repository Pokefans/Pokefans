    SiteTitle = "Angebot melden";
    SiteHeader = "Angebot melden";
    SiteDescription = "";
    ActiveMenuKey = "trading";
}

<div class="col-md-2">
    @Widgets.AnimatedSuccess()
</div>
<div class="col-md-10">
    <h2>Du hast das Angebot "@Model.Title" erfolgreich gemeldet.</h2
