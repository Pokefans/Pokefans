@model Pokefans.Models.TradingSubmenuViewModel

<div class="navbar navbar-default navbar-nocollapse" id="fanartbar">
    <div class="clearfix">
        <ul class="nav navbar-nav">
            <li class="@(Model.ActiveMenuKey == "home" || string.IsNullOrWhiteSpace(Model.ActiveMenuKey) ? "active" : "")"><a href="@Url.Action("Index", "Trading", null)" id="home">Übersicht</a></li>
        </ul>
        <form class="navbar-form navbar-left hidden-xs" role="search" method="get" action="@Url.Map("tausch/suche")">
            <div class="input-group">
                <input type="text" class="form-control" id="term" name="term" placeholder="Alles durchsuchen" value="@Model.SearchTerm" />
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </form>
        <ul class="nav navbar-nav navbar-right">
            <li class="@(Model.ActiveMenuKey == "add" ? "active" : "")"><a href="@Url.Action("AddOffer", "Trading")" title="Angebot hinzufügen"><i class="fa fa-plus fa-lg"></i>Angebot hinzufügen</a></li>
            <li class="@(Model.ActiveMenuKey == "own" ? "active" : "")"><a href="@Url.Action("My", "Trading")" title="Meine Angebote"><i class="fa fa-th-list fa-lg"></i> Meine Angebote</a></li>
            <li class="@(Model.ActiveMenuKey == "protocol" ? "active" : "")"><a href="@Url.Action("Protocol","Trading")" title="Mein Tauschprotokoll"><i class="fa fa-list-alt fa-lg"></i> Mein Tauschprotokoll</a></li>
        </ul>
    </div>
</div>
