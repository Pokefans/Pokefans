@model int
@{
    string css = "disabled";
}

<div class="row bs-wizard" style="border-bottom:0;">

    @{
        css = Model < 1 ? "disabled" : (Model > 1 ? "complete" : "active");
    }
    <div class="col-3 bs-wizard-step @css">
        <div class="text-center bs-wizard-stepnum">Schritt 1</div>
        <div class="progress"><div class="progress-bar"></div></div>
        <a href="#" class="bs-wizard-dot"></a>
        <div class="bs-wizard-info text-center">Angebot erstellen</div>
    </div>

    @{ css = Model < 2 ? "disabled" : (Model > 2 ? "complete" : "active"); }
    <div class="col-3 bs-wizard-step @css">
        <!-- complete -->
        <div class="text-center bs-wizard-stepnum">Schritt 2</div>
        <div class="progress"><div class="progress-bar"></div></div>
        <a href="#" class="bs-wizard-dot"></a>
        <div class="bs-wizard-info text-center">Tauschpartner auswählen</div>
    </div>

    @{ css = Model < 3 ? "disabled" : (Model > 3 ? "complete" : "active"); }
    <div class="col-3 bs-wizard-step @css">
        <!-- complete -->
        <div class="text-center bs-wizard-stepnum">Schritt 3</div>
        <div class="progress"><div class="progress-bar"></div></div>
        <a href="#" class="bs-wizard-dot"></a>
        <div class="bs-wizard-info text-center">Tausch bestätigen</div>
    </div>

    @{
        css = Model < 4 ? "disabled" : (Model > 4 ? "complete" : "active");
    }
    <div class="col-3 bs-wizard-step @css">
        <!-- active -->
        <div class="text-center bs-wizard-stepnum">Schritt 4</div>
        <div class="progress"><div class="progress-bar"></div></div>
        <a href="#" class="bs-wizard-dot"></a>
        <div class="bs-wizard-info text-center">Fertig!</div>
    </div>
</div>
