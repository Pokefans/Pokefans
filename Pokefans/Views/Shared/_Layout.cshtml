<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@SiteTitle</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @if (IsSectionDefined("CustomHeaders"))
    {
        @RenderSection("CustomHeaders")
    }
</head>
<body>
    <div class="container">
        <div class="wrap">
            <div id="search" class="hidden-xs">
                <div class="clearfix">
                    <a href="@Url.Map("", null)" class="pull-left"><img src="//static.pokefans.net/images/logo.svg" style="height:50px;"></a>

                    <form action="http://pokefans.net/search" method="post" class="pull-right">
                        @* Sobald die Suche portiert wird, hier den HTML-Helper einsetzen.*@
                        <span>Suche<span class="hidden-sm hidden-xs"> auf Pokefans</span>:</span>
                        <span id="searchbox">
                            <input type="text" name="search"><select name="search-index">
                                <option value="pokefans">Website</option>
                                <option value="pokedex">Pokedex</option>
                                <option value="forum">Forum</option>
                                <option value="mainpage">ohne Forum</option>
                                <option value="user">User</option>
                                <option value="internet">Internet</option>
                            </select>
                        </span>
                        <input type="submit" value="Jetzt suchen" class="button">
                    </form>
                </div>
            </div>
            <div class="navbar navbar-inverse" id="menu">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("POKEFANS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand visible-xs visible-sm" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Pokefans", "Index", "Home", new { area = "" }, new { @class = "hidden-xs hidden-sm" })</li>
                            <li>@Html.ActionLink("Pokémon-Spiele", "Index", "Home")</li>
                            <li>@Html.ActionLink("Pokedex", "Index", "Home")</li>
                            <li>@Html.ActionLink("Kampf & Strategie", "Index", "Home")</li>
                            <li class="@isActive("fanart")"><a href="@Url.Action("Index", "FanartHome", new { area = "fanart" }, "fanart", null)">Fanart & Zeichnungen</a></li>
                            <li class="@isActive("trading")"><a href="@Url.Map("tausch", null)">Tauschbörse</a></li>
                            <li>@Html.ActionLink("Forum", "Index", "Home")</li>
                            @if (User.IsInRole("mitarbeiter"))
                            {
                                <li>@Html.ActionLink("Mitarbeit", "Index", "Dashboard", "mitarbeit", routeValues: null, htmlAttributes: null)</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            @RenderSection("Submenu", false)
            @RenderSection("FullWidth", false)
            <div class="clearfix">
                <div id="content" class="content @(IsSectionDefined("Sidebar") ? "column" : "article-100")">
                    @RenderBody()
                </div>
                @if (IsSectionDefined("Sidebar"))
                {
                    <div id="sidebar" class="column">
                        @RenderSection("Sidebar")
                    </div>
                }
            </div>
            <footer id="footer">
                <div id="breadcrumbs">
                    <div class="col-sm-6">
                        @Html.Partial("_BreadcrumbPartial")
                    </div>
                    <div class="col-sm-6">
                        <div class="pull-right">
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>
                <div id="copyright">
                    <div class="clearfix">
                        <div class="copyright-note"><p>&copy; 2006 - @DateTime.Now.Year. Pokefans ist eine private Pokémon-Fanseite.</p></div>
                        <div class="copyright-links"><p><a href="http://pokefans.net/pokefans/impressum">Kontakt</a> <a href="http://pokefans.net/pokefans/impressum#datenschutz">Datenschutz</a> <a href="http://pokefans.net/sitemap">Sitemap</a> <a href="http://www.facebook.com/pokefans.net"><i class="fa fa-facebook-official fa-2x"></i></a> <a href="http://pinterest.com/pokefans/pins/"><i class="fa fa-pinterest-square fa-2x"></i></a> <a href="http://www.youtube.com/user/pokefansnet"><i class="fa fa-youtube-square fa-2x"></i></a> <a href="http://twitter.com/PokefansNET"><i class="fa fa-twitter-square fa-2x"></i></a> <a href="https://github.com/Pokefans/Pokefans"><i class="fa fa-github-square fa-2x"></i></a></p></div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/1.0.9/cookieconsent.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
